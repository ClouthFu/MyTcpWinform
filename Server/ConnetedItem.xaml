<UserControl x:Name="userControl" x:Class="Server.ConnetedItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Server"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800" Width="700" Background="#FF46B831">
    <Grid Margin="2,2,2,2" ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" x:Name="lbl_IP_Port" Text="IP Show And Port" TextAlignment="Center" VerticalAlignment="Center" Foreground="#FFFDFDFD" FontWeight="Bold" FontSize="16" Margin="1,1,1,1"/>
        <TextBlock Grid.Column="1" x:Name="lbl_FileName" Text="FileName" TextAlignment="Center" VerticalAlignment="Center"  Foreground="#FFFDFDFD" FontWeight="Bold" FontSize="16" Margin="1,1,1,1" />
    </Grid>
</UserControl>
